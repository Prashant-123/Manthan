<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/home_frag"
    android:background="@drawable/cd">

       <ScrollView
           android:layout_width="match_parent"
           android:layout_height="match_parent">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical">

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="MANTHAN"
                   android:textStyle="bold"
                   android:textSize="25sp"
                   android:textColor="#a12727"
                   android:layout_marginTop="20dp"
                   android:fontFamily="sans-serif"
                   android:gravity="center" />

               <com.makeramen.roundedimageview.RoundedImageView
                   android:layout_width="250dp"
                   android:layout_height="250dp"
                   android:src="@drawable/logo"
                   android:layout_gravity="center"
                   app:riv_corner_radius="20dp"
                   android:elevation="20dp"/>

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:text="The best and most beautiful things in the world cannot be seen or even touched - they must be felt with the heart."
                   android:layout_marginTop="20dp"
                   android:textSize="20sp"
                   android:layout_marginLeft="20dp"
                   android:layout_marginRight="20dp"
                   android:textColor="#009999"
                   android:gravity="center"
                   android:textStyle="bold"/>

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_gravity="center"
                   android:layout_marginTop="50dp">

                   <Button
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:id="@+id/Proposal"
                       android:textAllCaps="false"
                       android:backgroundTint="#FF4081"
                       android:text="Proposal"/>

                   <Button
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:id="@+id/Join_us"
                       android:text="Join Us"
                       android:layout_marginLeft="60dp"
                       android:backgroundTint="#FF4081"
                       android:textAllCaps="false"
                       />

               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="vertical">

                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:text="Our Social Channels: "
                       android:layout_marginTop="100dp"/>

                   <RelativeLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent">

                       <Button
                           android:layout_width="40dp"
                           android:layout_height="40dp"
                           android:id="@+id/fb_btn"
                           android:layout_marginLeft="8dp"
                           android:background="@drawable/facebook"
                           android:layout_marginBottom="5dp"
                           android:layout_gravity="start|bottom"/>

                       <Button
                           android:id="@+id/wa_btn"
                           android:layout_width="40dp"
                           android:layout_height="40dp"
                           android:layout_alignParentTop="true"
                           android:layout_gravity="start|bottom"
                           android:layout_marginStart="15dp"
                           android:layout_toEndOf="@+id/fb_btn"
                           android:background="@drawable/whatsapp"/>
                   </RelativeLayout>
               </LinearLayout>
           </LinearLayout>
       </ScrollView>
    <ProgressBar
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="40dp"
        android:visibility="gone"
        android:id="@+id/progress_bar" />

</android.support.design.widget.CoordinatorLayout>